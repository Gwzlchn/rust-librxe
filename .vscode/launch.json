    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'librxe'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=librxe"
                ],
                "filter": {
                    "name": "librxe",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug librxe_check_create_qp",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=librxe_test",
                    "--package=librxe"
                ],
                "filter": {
                    "name": "librxe_test",
                    "kind": "test"
                }
            },
            "args": ["librxe_check_create_qp"],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "librxe-sys/vendor/rdma-core/build/lib",
                "RUST_LOG": "debug",
                "RUST_BACKTRACE": "1",
              }
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug librxe_check_loopback",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=librxe_test",
                    "--package=librxe"
                ],
                "filter": {
                    "name": "librxe_test",
                    "kind": "test"
                }
            },
            "args": ["librxe_check_loopback"],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "librxe-sys/vendor/rdma-core/build/lib"
              }
        },

        {
            "name": "Remote launch librxe_check_loopback",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/librxe_test-16c0c8a2c6b93c53", // Local path.
            "initCommands": [
                "platform select remote-linux", // Execute `platform list` for a list of available remote platform plugins.
                "platform connect connect://localhost:10088",
                "settings set target.inherit-env true", // See note below.
            ],
            "args": ["librxe_check_loopback"],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "librxe-sys/vendor/rdma-core/build/lib"
              }
        },

        {
            "name": "Remote launch librxe_check_create_qp",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/librxe_test-16c0c8a2c6b93c53", // Local path.
            "initCommands": [
                "platform select remote-linux", // Execute `platform list` for a list of available remote platform plugins.
                "platform connect connect://localhost:10088",
                "settings set target.inherit-env true", // See note below.
            ],
            "args": ["librxe_check_create_qp"],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "librxe-sys/vendor/rdma-core/build/lib"
              }
        },
       
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration",
                    "--package=librxe"
                ],
                "filter": {
                    "name": "integration",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "librxe-sys/vendor/rdma-core/build/lib"
              }
        },
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'librxe-sys'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=librxe-sys"
                ],
                "filter": {
                    "name": "librxe-sys",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}